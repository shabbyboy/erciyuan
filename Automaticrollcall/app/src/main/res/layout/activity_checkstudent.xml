<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/four">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/record"
        android:hint="备注（此次点名的信息）"
        android:background="@drawable/bg"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dianming"
        android:text="点名"
        />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/class_num"
            android:inputType="number"
            android:background="@drawable/bg"
            android:hint="学生班级"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/student_num"
            android:inputType="number"
            android:background="@drawable/bg"
            android:hint="学号"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/student_name"
            android:background="@drawable/bg"
            android:hint="学生姓名"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ischeck"
            android:background="@drawable/bg"
            android:hint="出勤情况yes/no"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shoudong"
            android:background="@drawable/buttonstyle"
            android:text="手动点名"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/daoyuanhaoma"
            android:background="@drawable/bg"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send"
            android:background="@drawable/buttonstyle"
            android:text="给导员发信息汇报缺席学生及提醒相关学生到场"/>
    </LinearLayout>
</LinearLayout>
